package variables;

/**
 *
 * @author DISD
 // no typing here
 */
public class Variables {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        //this is where we type
    String firstName = "Joe Blog"; //declared a string variable to hold a persons firstname
    int age = 10; // declared a numerical value to hold a persons age; initialized to hold a value of 10
   double weight = 55.55;
   
   
   System.out.println(" Personal details"); // literal string; orint out as is
   System.out.println("-------------------"); // literal string; prin out as is
   System.out.println("Name: " + firstName);// calls firstName
   System.out.println("Age: " + age);// calls age
   System.out.println("Weight: " + weight);// calls weight
    }
    
}
